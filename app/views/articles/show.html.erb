<h1><%= @article.title %></h1>
<p>
    <%= @article.text %>
</p>

<h2> Comments </h2>

<p>
      <% @article.comments.each do |comment| %>
        <p>
        <i><%= comment.author %> said: </i><br/> 
        <%= comment.body %>
        <p>
          <%= link_to 'Edit', edit_article_comment_path(comment) %> |
          <%= link_to 'Delete comment', [comment.article, comment], 
                      method: :delete, 
                      data: { confirm: 'Are you sure?' } %>
        </p>
        <hr>
        </p>
    <% end %>
</p>


<h2>Leave comment</h2>

<%= form_for([@article, @article.comments.build]) do |f| %>  
<p>
  <!-- get username from  current user-->
  <% if user_signed_in? %>
    <%= f.hidden_field :author, :value => current_user.username %>
  <% else %>
    <%= link_to 'Sign in', article_path %> to leave comment
  <%end%>
</p> 

  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p> 

  <p>
    <%= f.submit %>
  </p>

<%end%>